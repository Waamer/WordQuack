                <FontIcon iconLiteral="mdi-close" iconSize="24" />
            </graphic>
        </MFXButton>
        <Text layoutX="68.0" layoutY="70.0" strokeType="OUTSIDE" strokeWidth="0.0" text="What is the result of:">
            <font>
                <Font size="30.0" />
            </font>
        </Text>
        <Text fx:id="questionText" layoutX="30.0" layoutY="118.0" strokeType="OUTSIDE" strokeWidth="0.0">
            <font>
                <Font size="16.0" />
            </font>
        </Text>
      <Text fx:id="responseText" layoutX="30.0" layoutY="175.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Answer then press submit to go to Progress page" />
